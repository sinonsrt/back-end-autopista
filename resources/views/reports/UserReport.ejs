<html>

<head>
    <style>
        ol {
            counter-reset: item
        }

        li {
            display: block
        }

        li:before {
            content: counters(item, ".") " ";
            counter-increment: item
        }

        h2 {
            text-align: center;
        }

        .page {
            float: right;
            margin-top: -103;
        }

        .contract {
            font-family: Arial, Tahoma sans-serif;
            font-size: 9pt;
            line-height: 1.0;
            margin: 20px
        }

        .filter {
            margin-left: 39%;
            margin-right: auto;
            text-align: justify;
        }

        table {
            font-family: Arial, Tahoma sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td,
        th {
            word-wrap: break-word;
            max-width: 300px;
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }

        @media print {
            .pagebreak {
                page-break-before: always;
            }

            /* page-break-after works, as well */
        }
    </style>
</head>

<body class="contract">
    <div style="margin-top: -23px;">
        <center>
            <h1>
                Sistema AutoPista - Usuários
            </h1>
        </center>
        <center>
            <div class="filter">
                <a>CONFIRMAÇÃO: <%= confirmation %></a><br>
            </div>
        </center>
    </div>
    <br>
    <table style="width:100%; font-size: 9pt;">
        <tr>
            <th>NOME</th>
            <th>E-MAIL</th>
            <th>CONFIRMAÇÃO</th>
            <th>NÍVEL DE ACESSO</th>
            <th>DATA DE CADASTRO</th>
        </tr>
        <% if(data.length> 0) { %>
            <% data.forEach(data=> { %>
                <tr>
                    <td>
                        <%= data.name %>
                    </td>
                    <td>
                        <%= data.email %>
                    </td>
                    <td>
                        <%= data.confirmed %>
                    </td>
                    <td>
                        <%= data.description %>
                    </td>
                    <td>
                        <%= 
                            data.created_at.getDate() + " / " + data.created_at.getMonth() + " / " + data.created_at.getFullYear() 
                        %>
                    </td>
                </tr>
                <% }); %>
                    <% }%>
    </table>
</body>
</html>